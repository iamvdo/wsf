section.language-css

  section
    h1: code position

  section.language-css
    h2: code position
    ul
      li.fragment Modifie le flux de la page
      li.fragment Permet de créer des calques
      li.fragment 4 valeurs: 
        code static
        |, 
        code absolute
        |, 
        code relative
        |  ou 
        code fixed
      li.fragment Positionné avec 4 propriétés:
       ul
        li.fragment
          code top
          |, 
          code bottom
          |, 
          code left
          |  et 
          code right

  section
    h2: code static
    ul
      li.fragment Valeur par défaut de tous les éléments
      li.fragment Ne modifie pas le flux

  section
    h2: code absolute
    ul
      li.fragment Sort l'élément de la page
      li.fragment Positionné sur son propre calque
      li.fragment Superpose les autres éléments
    ul
      li.fragment Positionné par rapport à la fenêtre
      li.fragment Ou, au premier élément parent en relative

  section
    h2: code fixed
    ul
      li.fragment Identique absolute
      li.fragment Mais l'élement est fixe pendant le scroll

  section
    h2: code relative
    ul
      li.fragment Ne sort pas l'élément du flux
      li.fragment Permet de définir les limites des éléments inclus en 
        code position: absolute 

  section.language-css
    h2 Ordre d'affichage
    ul
      li.fragment Propriété 
        code z-index
      li.fragment Gérer les superpositions des éléments positionnés
    pre.fragment
      code.
        .element {
          position: absolute;
          top: 0; right: 0;
          z-index: 5;
        }








































