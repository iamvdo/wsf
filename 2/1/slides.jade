      img.fragment.current-visible.overlay(src=root+'html.jpg')
      img.fragment.current-visible.overlay(src=root+'css.jpg')
      img.fragment.current-visible.overlay(src=root+'js.jpg')
      ul
        li.fragment HTML, CSS, JavaScript
